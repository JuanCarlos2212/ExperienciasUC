<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="#C4C4C4" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                    android:startColor="#001AFF"
                    android:centerColor="#5D0383"
                    android:centerX="50%"
                    android:endColor="#FF00AA"

                    android:angle="0"
                    />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                    android:startColor="#0022FF"
                    android:centerColor="#FF0000"
                    android:centerX="50%"
                    android:endColor="#99FFD6"

                    android:angle="0"
                    />
            </shape>
        </clip>
    </item>
</layer-list>




