<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="250dp"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Lo Sentimos!"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_marginTop="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estas intentando ingresar fuera del horario de atención, esta opción solo esta disponible en cierto horarios"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_margin="15dp"
            android:layout_marginTop="16dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnsiguienteContactanos"
            android:layout_width="200dp"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/siguiente"
            android:textColor="@color/white"
            android:background="@drawable/degradado_boton_horizontal"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>